{
   "compilerOptions": {
      "module": "CommonJS",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "ES2020",
      "typeRoots": ["node_modules/@types"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
         "@shared/*": ["../shared/*"]
      }
   },
   "compileOnSave": true,
   "exclude": ["node_modules"],
   "include": ["src"]
}
